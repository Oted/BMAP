<%- include partials/header.ejs %>

<script src="/socket.io/socket.io.js"></script>	

<script src="/javascripts/sharedPlaylist/index.js"></script>
<script src="/javascripts/sharedPlaylist/SharedFeatures.js"></script>
<script src="/javascripts/sharedPlaylist/PlaylistSocket.js"></script>
	<body>
		<input type="hidden" id="name-div" value="<%=name %>"/>
		<input type="hidden" id="client-div" value="<%=client %>"/>
		<input type="hidden" id="host-div" value="<%=host %>"/>
		<input type="hidden" id="port-div" value="<%=port %>"/>
	<iframe id="overlay-wrapper" src="http://<%=host %>:<%=port %>/add/?name=<%=name %>"></iframe>
    <div id="main-wrapper">
      <div id="inner-wrapper">
		<div class="fixed-top">
          <header id="main-header" class="grid-container">
            <div class="grid-4">
              <h2 class="text-center">
			  
			  </h2>
            </div>
            <div class="grid-4">
              <h1 class="text-center">  
				<%=name %>
			  </h1>
            </div>
            <div class="grid-4">
              <a id="add-video" class="icon-button grid-4 alpha playlist-handlers">Add new video </a>
            </div>
          </header>
        </div>

        <div id="main-content" class="grid-container">
          <div id="main-sidebar" class="grid-4">
			<div id="player-container" class="sidebar-component">
          	<a id="add-new-to-queue" class="icon-button grid-2 alpha playlist-handlers">Add New2Q</a>
          	<a id="empty-queue" class="icon-button grid-2 alpha playlist-handlers">EmptyQ</a>
				<%- include partials/player.ejs %>
			</div>
			<div id="hoover-element" class"grid-4" style="display:none">
			  <h3 id="video-title"></h3>
			  <img id="video-thumb" class="grid-2 alpha playlist-handlers"/>
			  <div class="grid-2 alpha playlist-handlers">
				<h3 id="video-category"></h3>
				<h3 id="video-views"></h3>
				<h3 id="video-duration"></h3>
				<h3 id="video-likes"></h3>
				<h3 id="video-dislikes"></h3>
			  </div>
			</div>
          </div>
          <div class="grid-8 push-4">
            <div id="search-results"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="message text-center" id="message-board"></div>
	</body>
</html>
			
