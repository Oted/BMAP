<%- include partials/header.ejs %>
<script src="/javascripts/localPlaylist/index.js"></script>	
<script src="/javascripts/localPlaylist/LocalFeatures.js"></script>
<script src="/javascripts/localPlaylist/SearchMachine.js"></script>
<script src="/javascripts/localPlaylist/PlaylistHandler.js"></script>

	<body>
		<input type="hidden" id="host-div" value="<%=host %>"/>
		<input type="hidden" id="port-div" value="<%=port %>"/>
		<div id="main-wrapper">
      <div id="inner-wrapper">
        <header id="main-header" class="grid-container">
          <div class="grid-4">
            <h2 class="text-center">
              Internet
            </h2>
          </div>
          <div class="grid-4">
            <h1 class="text-center">
              BMAP
            </h1>
          </div>
          <div class="grid-4">
            <h2 class="text-center">
              Sex
            </h2>
          </div>
        </header>
        <div class="grid-container" id="main-content">
          <div class="grid-4" id="main-sidebar">
            <div class="playlist-ctrls sidebar-component">
              <a class="icon-button fontawesome-file grid-2 alpha playlist-handlers" id="create-playlist"></a>
              <a class="icon-button fontawesome-paper-clip grid-2 omega playlist-handlers" id="attach-playlist"></a>
              <a class="icon-button block playlist-handlers" id="attached-playlist" ></a>
            </div>
            <div class="search-area sidebar-component">
              <input class="grid-2 alpha search-field" placeholder="Search" id="search"/>
              <input class="grid-2 omega search-field" placeholder="Constraints" id="constraints"/>
            </div>
            <div id="player-container" class="sidebar-component">
              <%- include partials/player.ejs %>
            </div>
            <!--<div id="previous"></div>-->
            <!--<div id="queue"></div>-->
          </div>
          <div class="grid-8">
            <div id="search-results"></div>
          </div>
        </div>
      </div>
		</div>
    <div class="message text-center" id="message-board"></div>
	</body>
</html>
