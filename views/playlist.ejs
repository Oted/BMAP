<%- include partials/header.ejs %>
<script src="/socket.io/socket.io.js"></script>	
<script src="/PlaylistScript.js"></script>
<script> var isAuthenticated = <%=auth%>;</script>
<script> var isLocked = <%=locked%>;</script>
	<body>
		<input type="hidden" id="name-div" value="<%=name %>"/>
		<input type="hidden" id="client-div" value="<%=client %>"/>
		<input type="hidden" id="host-div" value="<%=host %>"/>
		<input type="hidden" id="port-div" value="<%=port %>"/>
    <div id="overlay-background"></div>
	<iframe id="overlay-wrapper" src="http://<%=host %>:<%=port %>/add/?name=<%=name %>"></iframe>
    <div id="main-wrapper">
      <div id="inner-wrapper">
		<div class="fixed-top">
          <header id="main-header" class="grid-container">
    		<div class="message text-center grid-12" id="navigation-board">
				<a id="home" class="grid-2 fontawesome-home alpha" > Home</a>
				<a id="claim" class="grid-2 fontawesome-key" > Authenticate</a>
				<a href="#" id="show-settings" class="grid-2 fontawesome-edit" style="display:none"> Edit</a>
				<a id="show-queue" style="display:none" href="#" class="grid-2" ></a>
				<a id="show-chat"  style="display:none" href="#" class="grid-2" >Chat</a>
			  	<%- include partials/playlistAttributes.ejs %><br>
				<div style="display:none" id="queue-toggle">
          			<a id="empty-queue" class="fontawesome-trash options"></a>
				</div>
			</div>
			  	<%- include partials/settings.ejs %>
			<br>
			  <img class="grid-4" src="/images/Youdify-logo.png"></img>
			 <a id="add-video" class="icon-button grid-4 playlist-handlers">Add new video </a>
            </div>
          </header>
        </div>

        <div id="main-content" class="grid-container">
          <div id="main-sidebar" class="grid-4">
			<div id="player-container" class="sidebar-component">
          	<a id="add-new-to-queue" class="icon-button grid-4 alpha playlist-handlers">Add all new to queue</a>
				<%- include partials/player.ejs %>
			</div>
          </div>
          <div class="grid-8 push-4">
		  	<%- include partials/chat.ejs %>
            <div id="video-list"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="message text-center" id="message-board"></div>
	</body>
	<%- include partials/videoElement.ejs %>
</html>
			
